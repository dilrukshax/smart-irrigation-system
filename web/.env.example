# API Configuration
# Gateway URL (when running with nginx gateway)
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Auth Service
VITE_AUTH_SERVICE_URL=http://localhost:8001

# Direct Microservice URLs (for local development without gateway)
VITE_F1_SERVICE_URL=http://localhost:8002
VITE_F2_SERVICE_URL=http://localhost:8003
VITE_F3_SERVICE_URL=http://localhost:8003
VITE_F4_SERVICE_URL=http://localhost:8004

# Map Configuration
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_DEFAULT_MAP_CENTER=6.9271,79.8612
VITE_DEFAULT_MAP_ZOOM=10

# Feature Flags
VITE_ENABLE_F1_MODULE=true
VITE_ENABLE_F2_MODULE=true
VITE_ENABLE_F3_MODULE=true
VITE_ENABLE_F4_MODULE=true

# Authentication
VITE_AUTH_ENABLED=true
