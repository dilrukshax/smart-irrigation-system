# Environment configuration for IoT Service
# Copy this to .env and fill in your values

# Application
ENVIRONMENT=development
DEBUG=true

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_ORG=smart-irrigation
INFLUXDB_BUCKET=sensors

# MQTT
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Device Authentication (optional)
# Format: "device1:key1,device2:key2" or JSON '{"device1":"key1"}'
DEVICE_API_KEYS=

# Calibration (optional - defaults work for most sensors)
# SOIL_ADC_DRY=4095
# SOIL_ADC_WET=1000
# WATER_ADC_EMPTY=4095
# WATER_ADC_FULL=500
