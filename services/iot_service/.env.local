# Local Development Environment Variables
# Copy this file to .env and update values as needed

# For running services LOCALLY (outside Docker)
# Use localhost instead of Docker service names

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=
INFLUXDB_ORG=smart-irrigation
INFLUXDB_BUCKET=sensors

# MQTT Broker
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Device API Keys (optional, for device authentication)
# Format: device1:apikey1,device2:apikey2
DEVICE_API_KEYS=esp32-01:dev-key-1,esp32-02:dev-key-2

# Service Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
